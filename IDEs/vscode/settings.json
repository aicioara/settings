{
    // Sizes
    "window.zoomLevel": 0.2,
    "editor.tabSize": 4,
    "workbench.tree.indent": 16, // Notice tabs easier

    // Theming
    "workbench.colorTheme": "Monokai",
    "editor.matchBrackets": "never",
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "editor.scrollBeyondLastLine": true,

    // Sane defaults
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimTrailingWhitespace": true,
    "git.openRepositoryInParentFolders": "never",
    "explorer.confirmDelete": false,
    "search.collapseResults": "alwaysExpand",
    "interactiveWindow.collapseCellInputCode": "always",

    // Hints
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
    },
    "editor.snippetSuggestions": "top",
    // "editor.parameterHints.enabled": false,
    // "editor.suggest.snippetsPreventQuickSuggestions": false,
    // "html.suggest.html5": false,

    // Updates
    "extensions.autoCheckUpdates": false,
    "update.mode": "none",
    "extensions.autoUpdate": false,

    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // Plugins
    "[dockerfile]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },

    "go": {
        "formatTool": "goimports",
        "lintOnSave": "off",
        "useLanguageServer": false,
        "gotoSymbol.ignoreFolders": [
            "pkg",
        ],
        "installDependenciesWhenBuilding": false,
    },

    "rust-analyzer": {
        "hover.documentation.enable": false,
        "hover.documentation.keywords.enable": false,
        "inlayHints.typeHints.enable": false,
        "inlayHints.parameterHints.enable": false,
    },

    // New stuff after this line, to find easier
    "editor.fontSize": 17,
}
