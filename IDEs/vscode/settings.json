{
    // Sizes
    "window.zoomLevel": 0.2,
    "editor.tabSize": 4,
    "workbench.tree.indent": 16, // Notice tabs easier

    // Theming
    "workbench.colorTheme": "Dracula Theme",
    "editor.matchBrackets": "never",
    "editor.minimap.showSlider": "always",
    "editor.scrollBeyondLastLine": true,

    // User Experience
    "workbench.list.smoothScrolling": false,
    "editor.mouseWheelScrollSensitivity": 0.2, // Sane scrolling
    "workbench.list.mouseWheelScrollSensitivity": 0.2, // Sane scrolling outside code

    // Sane defaults
    "workbench.startupEditor": "none", // No startup screen
    "workbench.settings.editor": "json", // Always start in the JSON, not the UI
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.trimTrailingWhitespace": true,
    "git.openRepositoryInParentFolders": "never",
    "explorer.confirmDelete": false,
    "search.collapseResults": "alwaysExpand",
    "interactiveWindow.collapseCellInputCode": "always",

    // Hints
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
    },
    "editor.snippetSuggestions": "top",
    // "editor.parameterHints.enabled": false,
    // "editor.suggest.snippetsPreventQuickSuggestions": false,
    // "html.suggest.html5": false,

    // Updates
    "extensions.autoCheckUpdates": false,
    "update.mode": "none",
    "extensions.autoUpdate": false,

    // Telemetry
    "telemetry.telemetryLevel": "off",

    // Plugins
    "[dockerfile]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "go": {
        "formatTool": "goimports",
        "lintOnSave": "off",
        "useLanguageServer": false,
        "gotoSymbol.ignoreFolders": [
            "pkg",
        ],
        "installDependenciesWhenBuilding": false,
    },
    "rust-analyzer.hover.documentation.enable": false,
    "rust-analyzer.hover.documentation.keywords.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.diagnostics.warningsAsHint": [
        "dead_code",
    ],
    "rust-analyzer.lens.implementations.enable": false,

    // New stuff after this line, to find easier
    "editor.fontSize": 17,
    "files.autoSave": "onFocusChange",
}
